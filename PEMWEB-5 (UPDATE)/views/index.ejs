<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crud Node JS - MySQL</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<style>
    * {
        box-sizing: border-box;
        margin: 3px;
        padding: 5px;
      }

    h1 {
        text-align: center;
        border-radius: 10px;
    }
    
    main {
        display: flex;
        margin: 10px;
    }
    
    .daftartble {
        flex: 1; 
        margin-right: 50px; 
    }
    
    .daftartble table {
        width: 100%;
        padding: 20px; 
    }

    .daftartble table, th, tr {
        text-align: center;
    }

    body form {
        width: 45%;
        border: 1px;
        border-radius: 10px;
    }

    body form div {
        text-align: justify;
    }
    
</style>
<body class="p-3 mb-2 bg-transparent text-body">
    <h1 class="text-bg-dark p-3">Daftar User/Pengguna</h1><br>
    <main>
    <div class="daftartble">
    <table class="table table-hover">
        <tr>
            <th class="text-bg-warning p-3">ID</th>
            <th class="text-bg-warning p-3">Name</th>
            <th class="text-bg-warning p-3">Email</th>
            <th class="text-bg-warning p-3">Phone</th>
            <th class="text-bg-warning p-3">Aksi</th>
        </tr>
        <% users.forEach(pengguna => { %>
        <tr>
            <td><%= pengguna.id%></td>
            <td><%= pengguna.Name%></td>
            <td><%= pengguna.Email%></td>
            <td><%= pengguna.Phone%></td>
            <td>
                <a href="/edit/<%= pengguna.id%>" class="link-success">Edit</a>
                <a href="/delete/<%= pengguna.id%>" class="link-danger" onclick="return confirm('Apakah Anda yakin ingin menghapus data ini?')">Hapus</a>
            </td>
        </tr>
        <% }) %>
    </table>
    </div>

    <form action="/add" method="post" class="text-bg-warning p-3" onsubmit="alert('Data berhasil ditambahkan!')">
        <div class="row mb-3">
            <h2>Tambah Pengguna Baru</h2>
                <label for="Name" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Name" name="Name" required>
                </div>
        </div>
        <div class="row mb-3">
                <label for="Email" class="col-sm-2 col-form-label">Email</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" id="Email" name="Email">
                </div>
        </div>
        <div class="row mb-3">
                <label for="Phone" class="col-sm-2 col-form-label">Phone</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" id="Phone" name="Phone">
                </div>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-primary">Tambah</button>
        </div>
    </form>
    </main>
</body>
</html>